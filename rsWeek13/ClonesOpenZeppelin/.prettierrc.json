{
  "overrides": [
    {
      "files": "*.sol",
      "options": {
        "printWidth": 180,
        "tabWidth": 4,
        "useTabs": false,
        "singleQuote": false,
        "bracketSpacing": false,
        "explicitTypes": "preserve"
      }
    },
    {
      "files": "*.js",
      "options": {
        "printWidth": 150,
        "tabWidth": 2,
        "useTabs": false,
        "singleQuote": true,
        "bracketSpacing": true,
        "explicitTypes": "preserve"
      }
    }
  ]
}
